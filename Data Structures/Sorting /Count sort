#include <stdio.h>

void countsort(int arr[], int n)
{
    int max  = 0;
    for (int i = 0; i<n;i++)
    {
        if (arr[i]>max)
        {
            max = arr[i];
        }
    }

    int count[max+1];
    int output[n];
    for (int i = 0; i <= max; ++i) {
        count[i] = 0;
  }
    
    for ( int i =0; i<n; i++  )
    {
        count[arr[i]]++;
    }
    for (int i = 0; i<= max; i++)
    {
        count[i] += count[i-1];
    }
    for (int i = n - 1; i >= 0; i--) {
    output[count[arr[i]] - 1] = arr[i];
    count[arr[i]]--;
  }
    
    
    for (int i = 0; i<n;i++)
    {
        printf(" %d ", output[i]);
    }
}

int main()
{
    int arr[5] = {6,5,3,8,1};
    int n = 5;
    countsort(arr, n);
    return 0;
}






